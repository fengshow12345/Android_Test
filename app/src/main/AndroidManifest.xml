<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fengshow.appforricenitrogen">

    <!-- 调用摄像头权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 挂载SD卡 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- SD卡读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/rice_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CameraForCanopy"></activity>
        <activity android:name=".ResultActivity"></activity>


        <activity android:name=".CameraForLeafNitrogenWithWireframe"></activity>
        <activity android:name=".ResultActivityForLeafWithWireframe"></activity>

    </application>

</manifest>